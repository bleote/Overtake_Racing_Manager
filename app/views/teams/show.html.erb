<div class="row justify-content-center">
  <div class="py-4 text-center">

    <h1><%= @team.team_name %></h1>
    <div class="d-flex text-start m-2 p-2 rounded border border-white">
      <div class="d-flex team-logo">
        <%= image_tag @team.team_logo, width: 150 %>
      </div>

      <div class="team-description">
        <% if @team.team_name == "Red Bull" || @team.team_name == "Ferrari" || @team.team_name == "Mercedes" %>
        <p class="ps-2"><%= @team.team_name %> is a top-tier team and they'll expect you to lead them to victories!</p>
        <% else %>
        <p class="ps-2"><%= @team.team_name %> is a low-tier team and they wish to find their way into the points.</p>
        <% end %>
      </div>
    </div>

    <div class="d-flex text-start m-2 p-2 rounded border border-white">
      <div class="team-description">
        <p class="pe-2">You'll be working directly with <strong><%= @team.chief.chief_name %></strong> and will guide the team to make sure both drivers are bringing all possible points home.</p>
      </div>

      <div class="d-flex team-principal">
        <%= image_tag @team.chief.chief_image, height: 100, width: 100, crop: :fill, class:"chief-photo" %>
      </div>
    </div>

    <div>
    <p><%= image_tag @team.cars.sample.car_image, width: 200 %></p>
    </div>

    <div class="pt-4">
      <%= link_to "Back", teams_path, class: "primary-btn" %>
    </div>
  </div>
</div>
